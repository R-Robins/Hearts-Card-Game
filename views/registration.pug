doctype html
html(lang='en')

head
    title= 'Registration'
    include partials/head.pug

body(class = 'login-body')
    h1(class= 'vertical-padding align-center') Welcome to Hearts!

    div(class= 'center-box')
        h1(class= 'vertical-padding align-center') Registration
        form(action='/registration', method='post')
            if errors
                each error in errors
                    p(class= 'align-center', style= 'color: red')= error.msg
            div
                label(class='align-right vertical-padding') Username:
                input(class='align-left' type='Username', name='username_input')

            div
                label(class='align-right vertical-padding') Password:
                input(class='align-left', type='Password', name='password_input')

            div
                label(class='align-right vertical-padding') Verify Password:
                input(class='align-left', type='Password', name='password_verify')

            div(class= 'vertical-padding align-center')
                button.btn.btn-primary(type='submit') Submit